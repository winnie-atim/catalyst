  link(href='../css/index.css' rel='stylesheet')
  title Document
// heading section
section
  .main-heading
    h3.header Daystar day care system
  // form section
  h5.card-title.login-title Login
  .card.mycard(style='width: 25rem;')
    .card-body
      p.card-text
        form
          .mb-3
            label.form-label(for='username') Username
            input#username.form-control(type='text' aria-describedby='username')
          .mb-3
            label.form-label(for='exampleInputPassword1') Password
            input#exampleInputPassword1.form-control(type='password')
          a(href='')
            button.btn(type='submit') Submit
